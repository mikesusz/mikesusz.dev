---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const projects = (
	await getCollection('projects', ({ data }) => {
		return data.draft !== true;
	})
).sort((a, b) => b.data.createdDate.valueOf() - a.data.createdDate.valueOf());
console.log(projects);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Projects | ${SITE_TITLE}`} description="Side projects I've been building." />
		<style>
			ul {
				list-style-type: none;
				padding-left: 0;
			}
			li {
				border-left: 1vw solid #004cff;
				padding-left: 1vw;
				margin-bottom: 0.5rem;
			}
			.project-status {
				display: inline-block;
				padding: 0.1em 0.5em;
				border-radius: 0.25em;
				font-size: 0.75em;
				text-transform: uppercase;
				letter-spacing: 0.05em;
				margin-left: 0.5em;
			}
			.project-status.active {
				background: var(--accent-color-1);
				color: var(--main-bg);
			}
			.project-status.archived {
				background: var(--accent-color-4);
				color: var(--main-bg);
			}
			.project-status.planned {
				background: var(--accent-color-3);
				color: var(--main-fg);
			}
			.project-tags {
				display: inline-flex;
				gap: 0.3em;
				margin-left: 0.5em;
			}
			.project-tags span {
				padding: 0.05em 0.4em;
				border: 1px solid var(--accent-color-5);
				border-radius: 0.25em;
				font-size: 0.7em;
			}
		</style>
	</head>
	<body>
		<div class="page">
			<Header />
			<main>
				<section>
					<h1>Projects</h1>
					<ul class="styled-list">
						{
							projects.map((project) => {
								return (
									<li>
										<div>
											<FormattedDate date={project.data.createdDate} />
											<span class={`project-status ${project.data.status}`}>
												{project.data.status}
											</span>
											<a href={`/projects/${project.slug}/`} style={{ display: 'block' }}>
												{project.data.title}
											</a>
										</div>
										<p>{project.data.description}</p>
										{project.data.tags && project.data.tags.length > 0 && (
											<div class="project-tags">
												{project.data.tags.map((tag) => (
													<span>{tag}</span>
												))}
											</div>
										)}
									</li>
								);
							})
						}
					</ul>
				</section>
			</main>
			<Footer />
		</div>
	</body>
</html>

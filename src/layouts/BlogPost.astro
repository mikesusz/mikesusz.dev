---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blogCollection'>['data'];

const { title, description, pubDate, updatedDate, heroImage, heroAlt } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			article {
				font-size: 125%;
				text-wrap-style: pretty;
				h2,
				h3,
				h4 {
					margin-top: 1.5em;
					border-left-width: 2em;
					border-left-color: var(--accent-color-1);
					border-left-style: solid;
					padding-left: 0.5em;
				}

				h3 {
					border-left-width: 1.2em;
				}

				h4 {
					border-left-width: 0.8em;
				}

				h2:nth-of-type(2),
				h3:nth-of-type(2),
				h4:nth-of-type(2) {
					border-left-color: var(--accent-color-2);
				}

				h2:nth-of-type(3),
				h3:nth-of-type(3),
				h4:nth-of-type(3) {
					border-left-color: var(--accent-color-3);
				}

				h2:nth-of-type(4),
				h3:nth-of-type(4),
				h4:nth-of-type(4) {
					border-left-color: var(--accent-color-4);
				}

				.heroImage {
					margin-top: 1em;
				}
			}
			.blog-navigation {
				margin-top: 2rem;
				text-align: center;
			}
		</style>
	</head>

	<body>
		<div class="page">
			<Header />
			<main>
				<article>
					{
						heroImage && (
							<img class="heroImage" width={720} height={360} src={heroImage} alt={heroAlt} />
						)
					}
					<h1 class="title">{title}</h1>
					{pubDate && <FormattedDate class="last-updated-on" date={pubDate} />}
					{
						updatedDate && (
							<div class="last-updated-on">
								Last updated on <FormattedDate date={updatedDate} />
							</div>
						)
					}
					<hr />
					<slot />
				</article>

				<div class="blog-navigation">
					<a href="/blog">Back to blog</a> | <a href="/">Back to home</a>
				</div>
			</main>
			<Footer />
		</div>
	</body>
</html>

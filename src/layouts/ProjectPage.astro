---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import ExternalLink from '../components/ExternalLink.astro';

interface Props {
	project: CollectionEntry<'projects'>;
	updates: CollectionEntry<'updates'>[];
}

const { project, updates } = Astro.props;
const { title, description, createdDate, status, tags, repoUrl, liveUrl, heroImage, heroAlt } =
	project.data;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			article {
				font-size: 125%;
				text-wrap-style: pretty;
				h2,
				h3 {
					margin-top: 1.5em;
					border-left-width: 2em;
					border-left-color: var(--accent-color-1);
					border-left-style: solid;
					padding-left: 0.5em;
				}

				h3 {
					border-left-width: 1em;
				}

				h2:nth-of-type(2),
				h3:nth-of-type(2) {
					border-left-color: var(--accent-color-2);
				}

				h2:nth-of-type(3),
				h3:nth-of-type(3) {
					border-left-color: var(--accent-color-3);
				}

				.heroImage {
					margin-top: 1em;
				}
			}

			.project-meta {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5em 1.5em;
				align-items: center;
				margin-bottom: 1em;
			}

			.status-badge {
				display: inline-block;
				padding: 0.15em 0.6em;
				border-radius: 0.25em;
				font-size: 0.8em;
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}

			.status-badge.active {
				background: var(--accent-color-1);
				color: var(--main-bg);
			}

			.status-badge.archived {
				background: var(--accent-color-4);
				color: var(--main-bg);
			}

			.status-badge.planned {
				background: var(--accent-color-3);
				color: var(--main-fg);
			}

			.project-tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.4em;
				list-style: none;
				padding: 0;
				margin: 0.5em 0;
			}

			.project-tags li {
				padding: 0.1em 0.5em;
				border: 1px solid var(--accent-color-5);
				border-radius: 0.25em;
				font-size: 0.75em;
			}

			.project-links {
				display: flex;
				gap: 1em;
				margin: 0.5em 0;
			}

			.updates-section {
				margin-top: 2em;
			}

			.blog-navigation {
				margin-top: 2rem;
				text-align: center;
			}
		</style>
	</head>

	<body>
		<div class="page">
			<Header />
			<main>
				<article>
					{
						heroImage && (
							<img class="heroImage" width={720} height={360} src={heroImage} alt={heroAlt} />
						)
					}
					<h1 class="title">{title}</h1>

					<div class="project-meta">
						<span class={`status-badge ${status}`}>{status}</span>
						<FormattedDate date={createdDate} />
					</div>

					{
						(repoUrl || liveUrl) && (
							<div class="project-links">
								{repoUrl && <ExternalLink href={repoUrl}>Repository</ExternalLink>}
								{liveUrl && <ExternalLink href={liveUrl}>Live site</ExternalLink>}
							</div>
						)
					}

					{
						tags && tags.length > 0 && (
							<ul class="project-tags">
								{tags.map((tag) => (
									<li>{tag}</li>
								))}
							</ul>
						)
					}

					<hr />
					<slot />

					{
						updates.length > 0 && (
							<section class="updates-section">
								<h2>Updates</h2>
								<ul class="styled-list">
									{updates.map((update) => (
										<li>
											<a href={`/projects/updates/${update.slug}/`}>{update.data.title}</a>
											<p>{update.data.description}</p>
											<FormattedDate date={update.data.date} />
										</li>
									))}
								</ul>
							</section>
						)
					}
				</article>

				<div class="blog-navigation">
					<a href="/projects">Back to projects</a> | <a href="/">Back to home</a>
				</div>
			</main>
			<Footer />
		</div>
	</body>
</html>
